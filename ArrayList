//Program 4 (IMP) - If you want to work with different types of data with arrays like INT , Strings


fun main() {

    var cars = arrayListOf<String>("Audi", "BMW")

    cars.add("Lamborghini")

        println("The first element of the array :" + cars[0])
        println("The second element of the array is: " + cars.get(1))
        println("Now, The size of the arrays is:  ${cars[2]}")

    println("------------------------------------------------------------")

    //Here we are going to deal with different data types with arrayList


    //create variable of mix data types
    var myMixArrayList = ArrayList<Any>()
    myMixArrayList.add("Ford")
    myMixArrayList.add(5)
    myMixArrayList.add(2.5)
    myMixArrayList.add(true)
    myMixArrayList.add('K')

//Now we print the different types of dataTypes
    println("The first element of the array :" + myMixArrayList[0])
    println("The second element of the array is: " + myMixArrayList[1])
    println("The third element of the array :" + myMixArrayList[2])
    println("The fourth element of the array :" + myMixArrayList[3])
    println("The fifth element of the array :" + myMixArrayList[4])




}
